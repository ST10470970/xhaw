<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvSixMonthTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Six-Month Courses"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvCourse1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="First Aid"
        android:textSize="16sp"
        android:padding="8dp"
        android:onClick="onCourseClick"
        android:background="?android:attr/selectableItemBackground" />

    <TextView
        android:id="@+id/tvCourse2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Sewing"
        android:textSize="16sp"
        android:padding="8dp"
        android:onClick="onCourseClick"
        android:background="?android:attr/selectableItemBackground" />

    <TextView
        android:id="@+id/tvCourse3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Landscaping"
        android:textSize="16sp"
        android:padding="8dp"
        android:onClick="onCourseClick"
        android:background="?android:attr/selectableItemBackground" />

    <TextView
        android:id="@+id/tvCourse4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Life Skills"
        android:textSize="16sp"
        android:padding="8dp"
        android:onClick="onCourseClick"
        android:background="?android:attr/selectableItemBackground" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginTop="16dp" />

</LinearLayout>